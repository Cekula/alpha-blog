<div class="container">
  <%= render 'layouts/errormsg' %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article,class:"shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label mt-3 text-light"%>
         <div class="col-10">
          <%= f.text_field :title, class:"form-control shadow rounded", placeholder:"Title of article" %>
         </div>
       </div>
       <div class="form-group row">
          <%= f.label :description,class: "col-2 col-form-label text-light" %>
         <div class="col-10">
          <%= f.text_area :description,rows: 10, class:"form-control shadow rounded mb-4", placeholder:"Description of article" %>
         </div>
       </div>

       <div class="form-group row justify-content-center">
         <%= f.submit class:"btn btn-outline-light btn-lg col-2 mb-3" %>
       </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"row justify-content-center text-info" %> 
  </div>
</div>